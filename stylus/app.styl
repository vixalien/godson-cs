body
	font-family 'Raleway', system-ui, sans-serif
	text-align center
	background-color #f9f9ff
	padding 0 20px 50px

.hero-image
	max-height 100px
	margin-bottom 100px

.hero-div
	& > span
		font-size 20px
		text-transform uppercase
	h1
		margin 15px 0 0 0
		color #de9314
		font-size 64px
		font-weight 800
		font-family 'Montserrat'
	p
		margin 30px auto 55px auto
		font-size 26px
		color #18192a96
		max-width 500px
		text-align center
		font-weight 600
	a
		background-color #352409
		color #fff
		text-decoration none
		padding 15px
		display block
		max-width 300px
		text-align center
		margin 10px auto
		font-size 20px
		border-radius 1000px
		display flex
		font-weight 600
		transition .3s box-shadow
		.icon
			width 50px
			height 50px
			margin auto 0
			display flex
		.mail-icon
			background-color #fff
			color #996a1a
			justify-content center
			border-radius 50px
		.text
			flex 1
			margin auto
			font-size 16px
		&:hover
			box-shadow 0 2.8px 2.2px rgba(0, 0, 0, .03), 0 6.7px 5.3px rgba(0, 0, 0, .05), 0 12.5px 10px rgba(0, 0, 0, .06), 0 22.3px 17.9px rgba(0, 0, 0, .07)

.links
	display flex
	justify-content center
	& > a
		margin 10px
		padding 10px
		box-shadow 0 3px 1px 0 #181a380d
		border-radius 50%
		color rgba(24, 26, 56, 0.27)
		text-decoration none
		border solid 1px #f4f4f9
		background-color #ffffff
		box-sizing border-box
		display flex
		justify-content center
		align-items center
		transition .3s
		&:hover
			box-shadow 0 7px 10px 0 #181a381a
			color #000
			border solid 1px #f4f4f9	

svg.ionicon
	fill currentColor
	width 21px

.vs
	display flex
	justify-content space-around
	margin 50px 0 100px
	.vadai
		margin-top 100px
	.sadai
		margin-bottom 100px

@media screen and (max-width 500px)
	.hero-div
		h1
			font-size 40px
			line-height 1.33
		p
			font-size 18px
			line-height 1.5
		a
			padding 7px
			.icon
				width 40px
				height 40px